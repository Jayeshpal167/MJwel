<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/cart_item"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <ImageView
            android:id="@+id/cart_product_image"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_weight="4"
            android:scaleType="fitCenter"
            android:src="@drawable/necklac_dummy"
            android:background="@drawable/cart_item_image"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="6"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cart_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Product Name"
                android:textColor="@color/black"
                android:fontFamily="@font/opensansbold"
                />
            <TextView
                android:id="@+id/cart_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/opensansregular"
                android:textColor="@color/black"
                android:text="â‚¹120000" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="Qty:"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensanssemibold"
                    android:textColor="@color/black" />
                <ImageView
                    android:id="@+id/cart_product_qty_minus"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_height="20dp"
                    android:src="@drawable/minus"
                    android:layout_marginStart="10dp" />
                <TextView
                    android:id="@+id/cart_product_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="5dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/opensansbold"
                    android:layout_gravity="center" />
                <ImageView
                    android:id="@+id/cart_product_qty_plus"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:layout_height="20dp"
                    android:src="@drawable/plus" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/cart_remove"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/cart_remove_btn"
        android:text="Remove"
        android:textAllCaps="false"
        android:textColor="@color/nav_text_color"
        android:fontFamily="@font/opensansregular"/>

</LinearLayout>