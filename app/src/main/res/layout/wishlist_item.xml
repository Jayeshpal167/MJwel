<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:cardCornerRadius="10dp"
    android:layout_margin="16dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/wishlist_product_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/necklac_dummy" />
        <TextView
            android:id="@+id/wishlist_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensansbold"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="@string/product_name"
            android:layout_marginTop="8dp"
            android:textColor="@color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/wishlist_product_rating"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:drawableLeft="@drawable/star"
                android:layout_height="wrap_content"
                android:text="3.0"
                android:textColor="@color/black"
                android:fontFamily="@font/opensansregular"
                android:textSize="16sp"
                android:drawableStart="@drawable/star" />
            <TextView
                android:id="@+id/wishlist_product_price"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="â‚¹ 12000"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:fontFamily="@font/opensansbold"
                android:textSize="16sp"
                android:gravity="end" />

        </LinearLayout>
        <Button
            android:id="@+id/wishlist_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/wishlist_add_to_cart"
            android:text="Move to Cart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/opensanssemibold" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>